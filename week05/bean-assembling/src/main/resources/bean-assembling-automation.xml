<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

  <bean id="schoolDao"
    class="com.homework.bean.assembling.annotation.dao.impl.SchoolDaoImpl"
    autowire="byName"/>
  <bean id="schoolService"
    class="com.homework.bean.assembling.annotation.service.impl.SchoolServiceImpl"
    autowire="byName"/>
  <bean id="schoolController"
    class="com.homework.bean.assembling.annotation.controller.SchoolController"
    autowire="byName"/>
</beans>